align=left
separator=true

[clock]
command=date '+<span foreground="#ff8c00">%H:%M</span>'
interval=1
align=center

[updates]
command=$HOME/.config/i3blocks/scripts/updates.sh
interval=1800
markup=pango

[power]
command=/home/joji/.config/i3blocks/scripts/power-block.sh
interval=1
align=right
markup=pango

[spacer-right]
